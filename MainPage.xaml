<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Examen_Mvvm.ViewModels"
             x:Class="Examen_Mvvm.MainPage">

    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Entradas de productos -->
            <Entry Placeholder="Producto 1" Keyboard="Numeric" Text="{Binding Producto1}"/>
            <Entry Placeholder="Producto 2" Keyboard="Numeric" Text="{Binding Producto2}"/>
            <Entry Placeholder="Producto 3" Keyboard="Numeric" Text="{Binding Producto3}"/>

            <!-- Campos calculados -->
            <Label Text="Subtotal:"/>
            <Entry Text="{Binding Subtotal}" IsReadOnly="True"/>

            <Label Text="Descuento aplicado:"/>
            <Entry Text="{Binding Descuento}" IsReadOnly="True"/>

            <Label Text="Total a pagar:"/>
            <Entry Text="{Binding Total}" IsReadOnly="True"/>

            <!-- Botones -->
            <Button Text="Calcular" Command="{Binding CalcularCommand}"/>
            <Button Text="Limpiar" Command="{Binding LimpiarCommand}"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
